{
  "url": "https://github.com/docker/compose/releases/download/${VERSION}/docker-compose-${env:LWPM_UNAME_S}-${env:LWPM_UNAME_M}.exe",
  "command": "docker-compose",
  "version": "1.25.5",
  "platform": [
    {
      "architecture": "amd64",
      "os": "windows"
    },
    {
      "architecture": "amd64",
      "os": "darwin"
    },
    {
      "architecture": "amd64",
      "os": "linux"
    }
  ],
  "scripts": {
    "uninstall": "_cleanup C:\\bin\\docker-compose.exe\n",
    "install": "Copy-Item -Force $filename C:\\bin\\docker-compose.exe\n",
    "test": "docker-compose --version",
    "version": "(docker-compose --version).split(' ')[2].trim(',')",
    "download": "_mkdir $env:LWPM_PKG_ROOT/dist/${env:lwpm_os}-${env:lwpm_architecture}\n\nif(${env:lwpm_os} -ne \"windows\"){\n  $url = $url.trim('.exe')\n  $filename = $filename.trim('.exe')\n}\n\ncurl -L `\n$url `\n-o $env:LWPM_PKG_ROOT/dist/${env:lwpm_os}-${env:lwpm_architecture}/$filename\n"
  },
  "name": "compose",
  "pre-version": "1.26.0-rc4",
  "path": [
    "C:\\bin"
  ]
}
