[
  {
    "op": "add",
    "path": "/spec/template/spec/initContainers",
    "value": [
      {
        "name": "chown",
        "securityContext": {
          "runAsUser": 0,
          "runAsNonRoot": false
        },
        "image": "busybox",
        "args": [
          "sh",
          "-c",
          "chown 10000:10000 /var/log/jobs"
        ],
        "volumeMounts": [
          {
            "name": "job-logs",
            "mountPath": "/var/log/jobs",
            "subPath": ""
          }
        ]
      }
    ]
  }
]
