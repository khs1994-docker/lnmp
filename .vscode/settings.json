{
  // https://www.schemastore.org/json/
  "yaml.schemas": {
    "http://json.schemastore.org/travis": ".travis.yml",
    "https://github.com/pcit-ce/pcit/raw/master/config/config.schema.json": [
      ".pcit.yml",
      ".pcit.yaml",
      ".pcit/*.yml",
      ".pcit/*.yaml"
    ],
    "windows/lnmp-windows-pm-repo/lwpm.schema.json": [
      "lwpm.yaml",
      "lwpm.yml"
    ],
    "scripts/mutagen/mutagen.schema.json": [
      "mutagen.yml",
      "mutagen.example.yml"
    ],
    "https://raw.githubusercontent.com/coreos/ignition/master/config/v3_1/schema/ignition.json": [
      "*.fcc",
      "*.ign"
    ]
  },
  "json.schemas": [
    {
      "fileMatch": [
        "lwpm.json"
      ],
      "url": "./windows/lnmp-windows-pm-repo/lwpm.schema.json"
    },
    {
      "fileMatch": [
        "docker-image-sync.json",
        "docker-image-sync*.json"
      ],
      "url": "./scripts/docker-image-sync/config.schema.json"
    },
    {
      "fileMatch": [
        "*.patch.json"
      ],
      "url": "https://json.schemastore.org/json-patch"
    }
  ],
  // "yaml.trace.server": "",
  "vs-kubernetes": {
    // "vs-kubernetes.kubectl-path": "C:\\bin\\kubectl.exe",
  },
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.fontSize": 20,
  "sync.gist": "76f5fad88768a18910fadf6f8bc35c6c",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "files.eol": "\n",
  // "docker.host":"ssh://your-remote-user@your-remote-machine-fqdn-or-ip-here",
  // "docker.host":"tcp://your-remote-machine-fqdn-or-ip-here:port",
  // 文件类型关联
  "files.associations": {
    "*.ign": "json",
    "*.fcc": "yaml",
    "*.conflist": "json",
    "**/systemd/**/**.conf": "systemd-unit-file"
  },
  "terminal.integrated.shell.windows": "pwsh.exe"
}
