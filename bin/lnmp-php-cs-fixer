#!/usr/bin/env bash

#
# https://github.com/FriendsOfPHP/PHP-CS-Fixer
#

DIR="$( cd "$( dirname "$0"  )" && pwd  )"

source $DIR/.arch

docker run -it --rm \
  --mount type=bind,src=$PWD,target=/app,consistency=cached \
  --mount src=lnmp_composer_cache-data,target=/tmp/cache \
  --entrypoint php-cs-fixer \
  ${DOCKER_IMAGE}:${TAG} \
  "$@"
