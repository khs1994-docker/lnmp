#!/usr/bin/env bash

#
# https://github.com/mysql/mysql-server
#

set -ex

docker network inspect lnmp_backend > /dev/null 2>&1 || (docker network create lnmp_backend; CRETAT=true)

docker run -it --rm \
    --network lnmp_backend \
    -e TZ=${TZ} \
    mysql:8.0.11 \
    "$@" || docker run -it --rm \
    -e TZ=${TZ} \
    mysql:8.0.11 \
    "$@"

if ! [ -z "$CREATE" ];then
    docker network rm lnmp_backend > /dev/null 2>&1
fi
